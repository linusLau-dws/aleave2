<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="hk.com.dataworld.leaveapp.LeaveApplyActivity">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cheung Hiu"
                android:textSize="@dimen/bootstrap_h2_text_size"
                android:textColor="@color/colorPrimary2" />

            <com.beardedhen.androidbootstrap.BootstrapDropDown
                android:id="@+id/leavetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Annual leave"
                android:textSize="@dimen/bootstrap_h3_text_size"
                app:dropdownResource="@array/lunar_str"
                app:bootstrapBrand="secondary"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintWidth_percent="0.5"
                app:roundedCorners="true"
                app:bootstrapSize="lg"/>

            <TextView
                android:id="@+id/balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Balance: 12.23"
                android:textColor="@color/colorPrimary2"

                android:textSize="@dimen/bootstrap_h3_text_size"
                app:layout_constraintBaseline_toBaselineOf="@id/leavetype"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/leavetype"
                app:layout_constraintTop_toTopOf="@id/leavetype" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/leavetype"
                android:tint="#00FF00"
                app:layout_constraintEnd_toEndOf="@id/balance"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add"/>

            <TextView
                android:id="@+id/dayCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4 Days"
                android:textColor="@color/colorPrimary2"

                android:textSize="@dimen/bootstrap_h3_text_size"
                app:layout_constraintTop_toBottomOf="@id/recycler"
                />

            <ImageView
                android:id="@+id/ivAttachedImage1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_add_photo_library_grey"
                app:layout_constraintTop_toBottomOf="@+id/dayCount"/>

            <ImageView
                android:id="@+id/ivAttachedImage2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_photo_library_grey"
                app:layout_constraintTop_toBottomOf="@+id/dayCount"
                app:layout_constraintStart_toEndOf="@id/ivAttachedImage1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attachments_recycler"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivAttachedImage1" />

            <TextView
                android:id="@+id/lblRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Remarks:"
                android:textColor="@color/colorPrimary2"
                android:paddingEnd="14dp"

                android:textSize="@dimen/bootstrap_h3_text_size"
                app:layout_constraintBottom_toTopOf="@id/applyBtnFrame"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/lblRemarks"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblRemarks"
                app:layout_constraintEnd_toEndOf="parent"
                app:roundedCorners="true"/>

            <FrameLayout
                android:id="@+id/applyBtnFrame"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/content_page_color_botton_f"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/bootstrap_h1_text_size"
                    android:text="APPLY"
                    android:translationZ="1dp"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <!--</ScrollView>-->

        <com.google.android.material.navigation.NavigationView
    android:background="@color/platinum"
        android:id="@+id/drawer_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_removeAllNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:bootstrapBrand="danger"
                app:bootstrapText="@string/clear_all_notifications"
                app:roundedCorners="true" />

            <ListView
                android:id="@+id/drawer_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
